{
  "manifest_version": 3,
  "name": "Dark Pattern Guard",
  "version": "1.0",
  "permissions": ["activeTab"],
  "host_permissions": ["http://127.0.0.1:5000/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"]
    }
  ]
}
